<%= form_for(@hint) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	
	<%= f.label "Priority"  %>
  <%= f.text_field :priority, class: 'form-control' %>

	<%= f.label "Hint"  %>
  <%= f.text_field :hint, class: 'form-control' %>

	<%= f.label "Points to be deducted" %>
  <%= f.text_field :points, class: 'form-control' %>

	<%= hidden_field_tag('hint[problem_id]', :problem_id, value: @problem.id) %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>

<% end %>
