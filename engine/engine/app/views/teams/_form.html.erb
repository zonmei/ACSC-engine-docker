<%= form_for(@team) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%= f.label "Team Name"  %>
	<%= f.text_field :name, class: 'form-control' %>

	<%= f.label "Bracket" %>
	<%= f.collection_select :bracket_id, Bracket.order("priority ASC"), :id, :name, {include_blank: false}, {class: 'form-control'} %>

	<%= f.label "Passphrase" %>
	<%= f.password_field :passphrase, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
